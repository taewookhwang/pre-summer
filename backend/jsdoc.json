{
  "source": {
    "include": ["Services", "Shared", "Gateway"],
    "exclude": ["node_modules", "docs"],
    "includePattern": ".+\\.js$"
  },
  "opts": {
    "destination": "./docs/api",
    "recurse": true,
    "template": "node_modules/clean-jsdoc-theme",
    "readme": "./README.md",
    "encoding": "utf8"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true,
      "includeDate": true
    }
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}